{{>layouts/header}}

<div class="container mt-5">
    <h2 class="mb-4">독서 감상평 수정하기 ✍️</h2>

    {{#bookReview}}
        <form action="/reviews/update" method="post">
            <input type="hidden" name="id" value="{{id}}">

            <div class="mb-3">
                <label class="form-label">제목</label>
                <input type="text" class="form-control" name="title" value="{{title}}" required>
            </div>

            <div class="mb-3">
                <label class="form-label">저자</label>
                <input type="text" class="form-control" name="author" value="{{author}}">
            </div>

            <div class="mb-3">
                <label class="form-label">감상평</label>
                <textarea class="form-control" rows="5" name="content">{{content}}</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">평점 (1~5)</label>
                <select class="form-select" name="rating">
                    <option value="5">⭐⭐⭐⭐⭐ (5점)</option>
                    <option value="4">⭐⭐⭐⭐ (4점)</option>
                    <option value="3">⭐⭐⭐ (3점)</option>
                    <option value="2">⭐⭐ (2점)</option>
                    <option value="1">⭐ (1점)</option>
                </select>
                <small class="text-muted">현재 설정된 평점: {{rating}}점</small>
            </div>

            <button type="submit" class="btn btn-success">수정 완료</button>
            <a href="/reviews/{{id}}" class="btn btn-outline-secondary">취소</a>
        </form>
    {{/bookReview}}
</div>

{{>layouts/footer}}