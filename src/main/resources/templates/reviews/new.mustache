{{>layouts/header}}

<div class="container mt-5">
    <h2 class="mb-4">새 독서 감상평 작성</h2>
    <form action="/reviews/create" method="post">
        <div class="mb-3">
            <label class="form-label">제목</label>
            <input type="text" class="form-control" name="title" placeholder="책 제목을 입력하세요" required>
        </div>

        <div class="mb-3">
            <label class="form-label">저자</label>
            <input type="text" class="form-control" name="author" placeholder="저자 이름을 입력하세요">
        </div>

        <div class="mb-3">
            <label class="form-label">감상평</label>
            <textarea class="form-control" rows="5" name="content" placeholder="내용을 입력하세요"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">평점 (1~5)</label>
            <select class="form-select" name="rating">
                <option value="5">⭐⭐⭐⭐⭐ (5점)</option>
                <option value="4">⭐⭐⭐⭐ (4점)</option>
                <option value="3" selected>⭐⭐⭐ (3점)</option>
                <option value="2">⭐⭐ (2점)</option>
                <option value="1">⭐ (1점)</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">등록하기</button>
        <a href="/reviews" class="btn btn-outline-secondary">취소</a>
    </form>
</div>

{{>layouts/footer}}